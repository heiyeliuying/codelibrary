<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/common_dialog_frame"
    android:orientation="vertical" 
    >

    <TextView
        android:id="@+id/common_dialog_title"
        style="@style/common_text_style_primary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="center"
        
         />

    <TextView
        android:id="@+id/common_dialog_msg"
        style="@style/common_text_style_primary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" 
        android:gravity="center"
         android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:layout_weight="1"
        android:singleLine="false"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
       
        >

        <TextView
            android:id="@+id/common_dialog_sure"
            style="@style/common_text_style_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" 
            android:background="@drawable/common_dialog_left_selector"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/common_dialog_cancel"
            style="@style/common_text_style_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/common_dialog_sure"
            android:gravity="center" 
             android:background="@drawable/common_dialog_right_selector"
               android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/floatingBtn_blue"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="#33b5e5"
                android:clickable="true"
                 />

            <View
                android:id="@+id/floatingBtn_purple"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="#aa66cc"
                android:clickable="true"
                 />

            <View
                android:id="@+id/floatingBtn_green"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="#99cc00"
                android:clickable="true"
                 />

            <View
                android:id="@+id/floatingBtn_orange"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="#ffbb33"
                android:clickable="true"
                 />

            <View
                android:id="@+id/floatingBtn_red"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="#ff4444"
                android:clickable="true"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/floatingBtn_hide"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="隐藏悬浮按钮"
                tools:ignore="NewApi" />

            <Button
                android:id="@+id/floatingBtn_show"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="显示悬浮按钮"
                tools:ignore="NewApi" />

        </LinearLayout>

        <ListView
            android:id="@+id/floatingBtn_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
    <com.icode.library.widgets.view.FloatingActionButton
        android:id="@+id/floatingBtn_btn"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:color="#FFDF4D38"
        app:drawable="@drawable/ic_content_discard" />

</FrameLayout>